{
  "name": "@sanity/mutate",
  "version": "3.35.0",
  "private": true,
  "description": "Tiny toolkit for working with Sanity mutations in JavaScript & TypeScript",
  "keywords": [
    "sanity",
    "mutations",
    "patch"
  ],
  "homepage": "https://www.sanity.io/",
  "bugs": {
    "url": "https://github.com/sanity-io/sanity/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sanity-io/sanity.git",
    "directory": "packages/@sanity/migrate"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "sideEffects": false,
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": "./lib/index.mjs",
      "require": "./lib/index.js",
      "default": "./lib/index.js"
    },
    "./path": {
      "source": "./src/_path.ts",
      "import": "./lib/_path.mjs",
      "require": "./lib/_path.js",
      "default": "./lib/_path.js"
    },
    "./_unstable_store": {
      "source": "./src/_unstable_store.ts",
      "import": "./lib/_unstable_store.mjs",
      "require": "./lib/_unstable_store.js",
      "default": "./lib/_unstable_store.js"
    },
    "./_unstable_apply": {
      "source": "./src/_unstable_apply.ts",
      "import": "./lib/_unstable_apply.mjs",
      "require": "./lib/_unstable_apply.js",
      "default": "./lib/_unstable_apply.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./lib/index.js",
  "module": "./lib/index.esm.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "src",
    "!**/__tests__/**"
  ],
  "scripts": {
    "build": "run-s clean pkg:build pkg:check",
    "clean": "rimraf lib",
    "format": "prettier --write --cache --ignore-unknown .",
    "pkg:build": "pkg build --strict",
    "pkg:check": "pkg check --strict",
    "pkg:watch": "pkg watch --strict",
    "typecheck": "tsc --build",
    "lint": "eslint . --ext .cjs,.js,.ts,.tsx",
    "test": "vitest run",
    "test:types": "vitest typecheck --no-watch",
    "test:types:watch": "vitest typecheck",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "example": "tsx --tsconfig ./examples/tsconfig.json",
    "check": "run-s typecheck pkg:build pkg:check test test:types",
    "dev": "run-p pkg:watch test:watch test:types:watch",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@sanity/diff-match-patch": "^3.1.1",
    "hotscript": "^1.0.13",
    "mendoza": "^3.0.4",
    "nanoid": "^3.1.30"
  },
  "devDependencies": {
    "@types/diff-match-patch": "^1.0.36",
    "@types/lodash": "^4.14.202",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-plugin-packagejson": "^2.4.10",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "packageManager": "pnpm@8.14.0",
  "engines": {
    "node": ">=18"
  }
}
